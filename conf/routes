# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
OPTIONS /*task                       controllers.Application.options(task:String)
GET     /                           controllers.Application.index
GET     /task/todo               controllers.Application.createdTasks
GET     /task/ongoing                controllers.Application.startedTasks
GET     /task/done               controllers.Application.finishedTasks
GET     /task/removed               controllers.Application.removedTasks
GET     /task/:uid                  controllers.Application.get(uid:String)
GET     /task                      controllers.Application.tasks
POST    /task                       controllers.Application.createTask
PUT     /task/:uid/start            controllers.Application.startTask(uid:String)
PUT     /task/:uid/finish           controllers.Application.finishTask(uid: String)
PUT     /task/:uid/remove           controllers.Application.removeTask(uid: String)
PUT     /task/:uid           controllers.Application.updateTask(uid: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
